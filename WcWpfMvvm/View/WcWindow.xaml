<Window x:Class="AppView.WcWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppView"
        xmlns:View="clr-namespace:AppView"
        xmlns:ViewModel="clr-namespace:AppViewModel"
        mc:Ignorable="d"
        Focusable="True"
        Name="mainWin"
        Title="Word Counter (WPF-MVVM)" Height="240" Width="360" Loaded="WcController_Loaded">
    <DockPanel Margin="5">
        <Label DockPanel.Dock="Top">Input:</Label>
        <TextBox Name="inBox" Text="{Binding InputLine, UpdateSourceTrigger=Explicit}"  DockPanel.Dock="Top"/>
        <Button Name="countBtn" IsDefault="True" Background="Blue" Command="{Binding DoCountCommand}" CommandParameter="{Binding ElementName=inBox, Path=Text}" DockPanel.Dock="Top" Margin="5" HorizontalAlignment="Left">Parse</Button>
        <Label DockPanel.Dock="Top">History:</Label>
        <ListBox ItemsSource="{Binding WC.History}"/>
    </DockPanel>
</Window>
